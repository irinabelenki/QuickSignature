<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.irinabelenki.quicksignature.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <Button
            android:id="@+id/open_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Image" />

        <Button
            android:id="@+id/test_button_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overlay bitmap" />

    </LinearLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3">

        <Button
            android:id="@+id/up"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Up" />

        <Button
            android:id="@+id/down"
            android:layout_column="1"
            android:layout_row="2"
            android:text="Down" />

        <Button
            android:id="@+id/left"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Left" />

        <Button
            android:id="@+id/right"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Right" />

        <Button
            android:id="@+id/load"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Load" />

    </GridLayout>

    <com.irinabelenki.quicksignature.TouchImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:scaleType="matrix" />

</LinearLayout>

